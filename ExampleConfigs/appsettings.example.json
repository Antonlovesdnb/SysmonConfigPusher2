{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:5001",

        "_comment_certificate": "Choose ONE of the certificate options below:",

        "_option1_pfx_file": {
          "Certificate": {
            "Path": "C:\\Certificates\\sysmonpusher.pfx",
            "Password": "your-certificate-password"
          }
        },

        "_option2_windows_cert_store": {
          "Certificate": {
            "Subject": "CN=sysmonpusher.yourdomain.com",
            "Store": "My",
            "Location": "LocalMachine"
          }
        },

        "_option3_development": "If no Certificate section is specified, uses ASP.NET Core dev cert"
      }
    }
  },

  "SysmonConfigPusher": {
    "SysmonBinaryUrl": "https://live.sysinternals.com/Sysmon.exe",
    "DefaultParallelism": 10,
    "RemoteDirectory": "C:\\SysmonFiles",
    "AuditLogPath": "C:\\ProgramData\\SysmonConfigPusher\\audit.json"
  },

  "Authorization": {
    "AdminGroup": "SysmonPusher-Admins",
    "OperatorGroup": "SysmonPusher-Operators",
    "ViewerGroup": "SysmonPusher-Viewers",
    "DefaultRole": "None"
  },

  "_documentation": {
    "Kestrel.Endpoints.Https.Url": "Binding URL. Use https://*:PORT to bind to all interfaces",
    "Kestrel.Endpoints.Https.Certificate.Path": "Path to PFX certificate file",
    "Kestrel.Endpoints.Https.Certificate.Password": "Password for PFX file",
    "Kestrel.Endpoints.Https.Certificate.Subject": "Certificate subject for Windows cert store lookup",
    "Kestrel.Endpoints.Https.Certificate.Store": "Certificate store name (My, Root, etc.)",
    "Kestrel.Endpoints.Https.Certificate.Location": "Store location (LocalMachine or CurrentUser)",
    "SysmonConfigPusher.SysmonBinaryUrl": "URL to download Sysmon executable",
    "SysmonConfigPusher.DefaultParallelism": "Max concurrent WMI connections (recommended: 10)",
    "SysmonConfigPusher.RemoteDirectory": "Directory on target hosts for Sysmon files",
    "SysmonConfigPusher.AuditLogPath": "Path to JSON audit log file (optional)",
    "Authorization.AdminGroup": "AD group with full admin access",
    "Authorization.OperatorGroup": "AD group for deployment operations",
    "Authorization.ViewerGroup": "AD group for read-only access",
    "Authorization.DefaultRole": "Role for users not in any group (None, Viewer, Operator, Admin)"
  }
}
