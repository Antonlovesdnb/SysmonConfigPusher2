<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Fragment>
    <UI Id="AgentConfigUI">

      <!-- Custom dialog for agent configuration -->
      <Dialog Id="AgentConfigDlg" Width="370" Height="270" Title="!(loc.InstallDirDlg_Title)">
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Agent Configuration" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Enter the server details to connect this agent." />

        <!-- Server URL -->
        <Control Id="ServerUrlLabel" Type="Text" X="20" Y="55" Width="330" Height="12" NoPrefix="yes" Text="Server URL (e.g., https://your-server:5001):" />
        <Control Id="ServerUrlEdit" Type="Edit" X="20" Y="68" Width="330" Height="18" Property="SERVER_URL" />

        <!-- Registration Token -->
        <Control Id="TokenLabel" Type="Text" X="20" Y="95" Width="330" Height="12" NoPrefix="yes" Text="Registration Token (from Settings > Agent Settings):" />
        <Control Id="TokenEdit" Type="Edit" X="20" Y="108" Width="330" Height="18" Property="REGISTRATION_TOKEN" />

        <!-- Skip Certificate Validation -->
        <Control Id="SkipCertCheck" Type="CheckBox" X="20" Y="135" Width="330" Height="17" Property="SKIP_CERT_VALIDATION" CheckBoxValue="1" Text="Skip TLS certificate validation (for self-signed certs)" />

        <!-- Tags (optional) -->
        <Control Id="TagsLabel" Type="Text" X="20" Y="160" Width="330" Height="12" NoPrefix="yes" Text="Tags - comma separated, optional (e.g., azure,production):" />
        <Control Id="TagsEdit" Type="Edit" X="20" Y="173" Width="330" Height="18" Property="AGENT_TAGS" />

        <!-- Help text (validation enforced by Next button condition) -->
        <Control Id="HelpText" Type="Text" X="20" Y="198" Width="330" Height="30" NoPrefix="yes" Text="Both Server URL and Registration Token are required to proceed." />

        <!-- Buttons -->
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)">
          <Publish Event="NewDialog" Value="InstallDirDlg" />
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="NewDialog" Value="VerifyReadyDlg" Condition="SERVER_URL AND REGISTRATION_TOKEN" />
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg" />
        </Control>
      </Dialog>

      <!-- Wire up the dialog sequence -->
      <Publish Dialog="InstallDirDlg" Control="Next" Event="NewDialog" Value="AgentConfigDlg" Order="4" />
      <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="AgentConfigDlg" Order="1" Condition="NOT Installed" />

    </UI>
  </Fragment>

</Wix>
